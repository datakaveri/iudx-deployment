pipeline {
        agent {
    node {
      label 'slave1'
    }
  }
  stages {
      stage('Kubescape Report for Auditing Server'){
          steps {
              script{
               sh 'helm template -f K8s-deployment/Charts/auditing-server/values.yaml -f K8s-deployment/Charts/auditing-server/example-azure-resource-values.yaml K8s-deployment/Charts/auditing-server  > auditing-server.yaml'
               sh 'kubescape scan -t 20 -vv cat-server.yaml --format pretty-printer --output auditing-report'
              }
          }
          post {
                always {
               publishHTML([allowMissing: true, alwaysLinkToLastBuild:  true, keepAll: true, reportDir: '/var/lib/jenkins/workspace/kubescape-auditing/', reportFiles: 'auditing-report.txt', reportName: 'Kubescape Scan Report for Auditing Server'])

                }
            }
      }
  }
}
