{
  "version": "1.0",
  "zookeepers": [
    "zookeeper.zookeeper.svc.cluster.local"
  ],
  "clusterId": "iudx-aaa-cluster",
  "options":{
      "postgresOptions": {
        "databaseIP": "psql-postgresql-ha-pgpool.postgres.svc.cluster.local",
        "databasePort": "5432",
        "databaseName": "postgres",
        "databaseSchema": "aaa",
        "databaseUserName": "iudx_auth_user",
        "databasePassword": ""
      },
      "commonOptions":{
        "authServerDomain":"<AAA-server-public-domain>"
      },
      "keycloakOptions":{
        "keycloakHost": "<keycloak-server-public-domain",
        "keycloakPort": 443,
        "keycloakRealm": "iudx",
        "keycloakSite": "https://{{keycloakHost}}/auth/realms/iudx",
        "keycloakUrl": "https://{{keycloakHost}}/auth",
        "keycloakTokenUri": "/auth/realms/iudx/protocol/openid-connect/token",
        "keycloakAdminClientId": "some-admin-client-id",
        "keycloakAdminClientSecret": "f5800be0-258a-4cd2-820f-8128818ed70a",
        "keycloakAdminPoolSize": "10",
        "keycloakAaaClientId": "auth.iudx.test",
        "keycloakAaaClientSecret": "",
        "keycloakJwtLeeway": 90
      },
      "jwtKeystoreOptions":{
        "keystorePath": "secrets/keystore.jks",
        "keystorePassword": ""
      }
  },
  "modules": [
    {
      "id": "iudx.aaa.server.policy.PolicyVerticle",
      "verticleInstances": 1,
      "required":["postgresOptions", "commonOptions"],
      "poolSize": "25",
      "domain" : "<domain-name>",
      "catalogueOptions": {
        "catServerHost": "<catalogue-api-domain-name",
        "catServerPort": "443"
      },
      "authOptions": {
        "policyExpiry" : "12",
        "adminPolicyExpiry" : "60"
      },
      "catOptions": {
        "catURL" : "<cat-audience-domain-name>",
        "catItem" : "catalogue/crud"
      },
      "resOptions" : {
        "resURL" : "<rs-audience-domain-name>"
      }
    },
    {
      "id": "iudx.aaa.server.registration.RegistrationVerticle",
      "verticleInstances": 2,
      "required":["postgresOptions", "keycloakOptions", "commonOptions"],
      "serversOmittedFromRevoke":["<catalogue-audience-domain>"],
      "poolSize": "15"
    },
    {
      "id": "iudx.aaa.server.token.TokenVerticle",
      "verticleInstances": 2,
      "required":["postgresOptions", "commonOptions", "keycloakOptions", "jwtKeystoreOptions"],
      "poolSize": "5"
    },
    {
      "id": "iudx.aaa.server.admin.AdminVerticle",
      "verticleInstances": 2,
      "required":["postgresOptions", "commonOptions", "keycloakOptions"],
      "poolSize": "15"
    },
    {
      "id": "iudx.aaa.server.apd.ApdVerticle",
      "verticleInstances": 2,
      "required":["postgresOptions", "commonOptions"],
      "webClientTimeoutMs": 4000,
      "poolSize": "15"
    },
    {
      "id": "iudx.aaa.server.auditing.AuditingVerticle",
      "verticleInstances": 2,
      "auditingDatabaseIP": "immudb.immudb.svc.cluster.local",
      "auditingDatabasePort": 5432,
      "auditingDatabaseName": "iudxauth",
      "auditingDatabaseUserName": "iudx_auth",
      "auditingDatabasePassword": "",
      "auditingPoolSize": 25
    },
    {
      "id": "iudx.aaa.server.apiserver.ApiServerVerticle",
      "verticleInstances": 2,
      "required":["postgresOptions", "commonOptions", "keycloakOptions", "jwtKeystoreOptions"],
      "poolSize": "5",
      "serverTimeoutMs": 5000,
      "corsRegexString": "*"
    }
  ]
}

