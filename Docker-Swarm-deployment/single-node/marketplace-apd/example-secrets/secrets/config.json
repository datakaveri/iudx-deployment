{
  "version": "1.0",
  "clusterId": "iudx-marketplace-cluster",
  "host": "<dmp-apd-hostname>",
  "commonConfig": {
    "dxApiBasePath": "/dx/apd/dmp/v1",
    "dxCatalogueBasePath": "/iudx/cat/v1",
    "dxAuthBasePath": "/auth/v1",
    "catServerHost": "<cat-server-hostname>",
    "catItemPath": "/iudx/cat/v1/item",
    "catRelPath": "/iudx/cat/v1/relationship",
    "tables": [
      "<list-of-tables>"
    ],
    "authPort": 443,
    "authHost": "<auth-server-hostname>",
    "clientId": "<dmp-trustee-client>",
    "clientSecret": "<dmp-trustee-secret>"
  },
  "modules":[
    {
      "id": "iudx.data.marketplace.apiserver.ApiServerVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false,
      "keystore": "",
      "keystorePassword": "",
      "httpPort": 8080,
      "ssl": false
    },
    {
      "id": "iudx.data.marketplace.authenticator.AuthenticationVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false,
      "authServerHost": "<atuh-server-hostname>",
      "jwtIgnoreExpiry": true,
      "issuer": "<token-issuer>",
      "apdURL": "<dmp-apd-url>"
    },
    {
      "id": "iudx.data.marketplace.policies.PolicyVerticle",
      "isWorkerVerticle": false,
      "verticleInstances": 1,
      "defaultExpiryDays": 12
    },
    {
      "id": "iudx.data.marketplace.postgres.PostgresVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle" : false,
      "databaseIP": "<database-host-address>",
      "catServerPort":443,
      "databasePort": 5432
      "databaseName": "<database-name>",
      "databaseUserName": "<database-user>",
      "databasePassword": "<database-password>",
      "poolSize": 25
    },
    {
      "id": "iudx.data.marketplace.product.ProductVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false
    },
    {
      "id": "iudx.data.marketplace.product.variant.ProductVariantVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false
    },
    {
      "id": "iudx.data.marketplace.consumer.ConsumerVerticle",
      "verticleInstances": 1,
      "isWorkerVerticle": false
    },
    {
      "id": "iudx.apd.acl.server.auditing.AuditingVerticle",
      "isWorkerVerticle": false,
      "verticleInstances": 1,
      "dataBrokerIP": "<databroker-host-address>",
      "dataBrokerPort": 5672,
      "dataBrokerVhost": "<databroker-virtual-host>",
      "dataBrokerUserName": "<databroker-user>",
      "dataBrokerPassword": "<databroker-password>",
      "dataBrokerManagementPort": 15672,
      "connectionTimeout": 6000,
      "requestedHeartbeat": 60,
      "handshakeTimeout": 6000,
      "requestedChannelMax": 5,
      "networkRecoveryInterval": 500,
      "automaticRecoveryEnabled": "true",
      "internalVhost": "IUDX-INTERNAL",
      "externalVhost": "IUDX-EXTERNAL"
    }
  ]
}
