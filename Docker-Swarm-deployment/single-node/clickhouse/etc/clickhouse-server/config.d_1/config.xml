<clickhouse replace="true">
    <logger>
        <level>debug</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>3</count>
    </logger>
    <display_name>ch_minio_s3</display_name>
    <listen_host>0.0.0.0</listen_host>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <interserver_http_port>9002</interserver_http_port>
    <user_directories>
        <users_xml>
            <path>users.xml</path>
        </users_xml>
        <local_directory>
            <path>/var/lib/clickhouse/access/</path>
        </local_directory>
    </user_directories>
    <remote_servers>
      <mycluster>
          <shard>
          <internal_replication>true</internal_replication>
            <replica>
                <host>tasks.clickhouse-server</host>
                <port>9000</port>
            </replica>
          </shard>
          <shard>
          <internal_replication>true</internal_replication>
            <replica>
                <host>tasks.clickhouse-server-1</host>
                <port>9001</port>
            </replica>
          </shard>       
      </mycluster>
    </remote_servers>
    <zookeeper>
      <node>
        <host>tasks.zookeeper</host>
        <port>2181</port>
      </node>
      <session_timeout_ms>30000</session_timeout_ms>
      <operation_timeout_ms>10000</operation_timeout_ms>
    </zookeeper>
    <macros>
        <shard>2</shard>
        <replica>replica2</replica>
    </macros>
    <storage_configuration>
        <disks>
            <s3>
                <type>s3</type>
                <endpoint>http://tasks.minio:10000/clickhouse//</endpoint>
                <access_key_id>miniousername</access_key_id>
                <secret_access_key>miniopassword</secret_access_key>
                <region></region>
                <metadata_path>/var/lib/clickhouse/disks/s3/</metadata_path>
            </s3>
            <s3_cache>
                <type>cache</type>
                <disk>s3</disk>
                <path>/var/lib/clickhouse/disks/s3_cache/</path>
                <max_size>10Gi</max_size>
            </s3_cache>
        </disks>
        <policies>
            <s3_main>
                <volumes>
                    <s3>
                        <disk>s3</disk>
                    </s3>
                </volumes>
            </s3_main>
        </policies>
    </storage_configuration>
    <backups>
        <allowed_disk>s3</allowed_disk>
    </backups>
</clickhouse>
